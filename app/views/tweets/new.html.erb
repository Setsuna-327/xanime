<h1>xanime</h1>
<h3>新規投稿ページ</h3>
<%= form_for @tweet do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :about, "作品について" %>
    <%= f.text_field :about, size: 30 %>
  </div>

  <div class="field">
    <%= f.label :point, "推しポイント" %>
    <%= f.text_area :point, size: "30x2" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", tweets_path %>
